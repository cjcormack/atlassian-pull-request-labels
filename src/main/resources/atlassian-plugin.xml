<atlassian-plugin key="${atlassian.plugin.key}" name="${project.name}" plugins-version="2">
    <plugin-info>
        <description>${project.description}</description>
        <version>${project.version}</version>
        <vendor name="${project.organization.name}" url="${project.organization.url}" />
        <param name="plugin-icon">images/pluginIcon.png</param>
        <param name="plugin-logo">images/pluginLogo.png</param>
    </plugin-info>

    <resource type="i18n" name="i18n" location="${project.groupId}.${project.artifactId}"/>

    <web-resource name="Resources" key="resources">
        <transformation extension="soy">
            <transformer key="soyTransformer">
                <functions>com.atlassian.confluence.plugins.soy:soy-core-functions</functions>
            </transformer>
        </transformation> 

        <!-- transform calls to AJS.getText() inside JS files -->
        <transformation extension="js">
            <transformer key="jsI18n"/>
        </transformation>

        <!--<resource name="pull-requests-labels.js" type="download" location="js/labels.js"/>-->
        <resource name="labels.js" type="download" location="js/labels-loader.js"/>
        <resource name="labels.css" type="download" location="css/labels.css"/>
        <resource name="labels.soy.js" type="download" location="/soy/labels.soy"/>
        <context>atl.general</context>

        <dependency>com.atlassian.auiplugin:aui-labels</dependency>
        <dependency>com.atlassian.auiplugin:aui-select</dependency>
    </web-resource>


  <rest name="Pull Request Labels" i18n-name-key="pull-request-labels.name" key="pull-request-labels" path="io.reconquest.bitbucket.labels" version="1.0">
    <description key="pull-request-labels.description">The Pull Request Labels Plugin</description>
  </rest>

  <ao key="ao-module">
      <description>The module configuring the Active Objects service used by this plugin</description>
      <entity>io.reconquest.bitbucket.labels.ao.Label</entity>
  </ao>

</atlassian-plugin>
